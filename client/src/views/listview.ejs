<div id="list">
	<h1>Notifications</h1>
	<h4><span class="label label-default">{{''|counter:listviewCtrl.getNotificationCount():listviewCtrl.getAllNotificationCount()}}</span></h4>
	<div class="list-group">
		<a href="#" ng-click="notification.selected=!notification.selected;notification.editable=false" ng-class="{'active':notification.selected}" class="list-group-item notification" 
				ng-repeat="notification in listviewCtrl.getNotifications()">
			<h4 ng-show="!notification.editable" class="list-group-item-heading">{{notification.title}} <span class="badge"><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> {{notification.votes_up}}</span></h4> {{listviewCtrl.distanceFromCenter(notification)}}
			<input type="text" class="form-control" ng-show="notification.editable" ng-model="notification.title" unpropogate>
			<div ng-show="notification.selected">
				<p ng-show="!notification.editable">{{notification.description}}</p>
				<input type="text" class="form-control" ng-show="notification.editable" ng-model="notification.description" unpropogate>
				<button class="btn btn-success" ng-click="listviewCtrl.voteUp(notification)" unpropogate>
					<span class="glyphicon glyphicon-circle-arrow-up" aria-hidden="true"></span> Vote Up
				</button>
				<button ng-show="!notification.editable" class="btn btn-info" ng-click="listviewCtrl.editNotification(notification)" unpropogate>
					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					<span> Edit</span>
				</button>
				<button ng-show="notification.editable" class="btn btn-info" ng-click="listviewCtrl.saveEditNotification(notification)" unpropogate>
					<span class="glyphicon glyphicon-floppy-saved" aria-hidden="true"></span>
					<span> Save</span>
				</button>
				<button ng-show="notification.editable" class="btn btn-warning" ng-click="listviewCtrl.cancelEditNotification(notification)" unpropogate>
					<span class="glyphicon glyphicon-floppy-remove" aria-hidden="true"></span>
					<span> Cancel</span>
				</button>
				<button class="btn btn-danger" ng-click="listviewCtrl.deleteNotification(notification)" unpropogate><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete</button>
			</div>
		</a>
	</div>
</div>